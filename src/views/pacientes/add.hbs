<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/pacientes/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="nombre" placeholder="Nombre" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="direccion" placeholder="Direccion">
                        </div>
                        <div class="form-group">
                            <input type="tel" class="form-control" name="telefono" placeholder="Telefono">
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion"  rows="3" class="form-control" placeholder="Descripcion"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                GUARDAR
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>